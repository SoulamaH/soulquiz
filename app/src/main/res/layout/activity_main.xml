<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.MainActivity"
    android:background="#BAAEA0">

  <include layout="@layout/toolbar"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"
      android:layout_gravity="bottom"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="10dp"
          android:text="Veuillez selectionner votre catÃ©gorie s'il vous plait"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:fontFamily="@font/roboto"
          android:textSize="15sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginHorizontal="20dp"
          android:gravity="center"
          android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_java"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/javaimage"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@mipmap/groupe75" />

            <TextView
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="JAVA"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#324755"/>

          </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_spring"

            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/springimage"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@mipmap/groupe75" />

            <TextView
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SPRING"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#324755"/>

          </RelativeLayout>

        </android.support.v7.widget.CardView>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="20dp"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_angular"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/angularimage"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@mipmap/groupe75" />

            <TextView
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ANGULAR"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#324755"/>

          </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_android"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/androidimage"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@mipmap/groupe75" />

            <TextView
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ANDROID"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#324755"/>

          </RelativeLayout>

        </android.support.v7.widget.CardView>



      </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center|bottom">

      <LinearLayout
          android:id="@+id/btn_nextwithlanguage"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:background="@mipmap/bg1"
          android:gravity="center">

        <TextView
            android:id="@+id/msg_bouton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#F0F3F4"
            android:fontFamily="@font/roboto_bold"
            android:text="Selectionner un langage"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="5"
          android:background="@mipmap/groupe80">

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>


</LinearLayout>
